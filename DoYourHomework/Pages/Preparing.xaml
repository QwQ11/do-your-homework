<UserControl x:Class="DoYourHomework.Pages.Preparing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoYourHomework.Pages"
             mc:Ignorable="d"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}"
             Height="450" Width="600">
    <Grid>
        <DockPanel x:Name="Panel" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ProgressBar x:Name="Progress" Style="{StaticResource MaterialDesignCircularProgressBar}" 
                         IsIndeterminate="True" Height="32" Width="32"></ProgressBar>
            <TextBlock x:Name="Info" FontSize="25" Margin="10" FontWeight="Bold">准备中</TextBlock>
        </DockPanel>
    </Grid>
</UserControl>
